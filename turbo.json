{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"outputs": ["coverage/**"],
			"dependsOn": ["^test"]
		},
		"lint": {
			"outputs": []
		},
		"prettier": {
			"outputs": []
		},
		"tsc": {
			"outputs": [],
			"inputs": ["**/*.ts", "**/*.tsx", "**/tsconfig.json"]
		},
		"release": {
			"outputs": [],
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		}
	}
}
